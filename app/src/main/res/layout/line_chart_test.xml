<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleHeight"
        android:background="@color/colorTitle"
        >
        <TextView
            android:id="@+id/text_bxt_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titleHeight"
            android:background="#00000000"
            android:gravity="center"
            android:text="波形图"
            android:textSize="@dimen/title1"
            android:textColor="@color/colorpri1"
            />
        <Button
            android:id="@+id/button_bxt_back"
            android:layout_height="@dimen/titleHeight"
            android:layout_width="wrap_content"
            android:text="返回"
            android:textSize="@dimen/title3"
            android:textColor="@color/colorpri1"
            android:gravity="center_vertical|left"
            android:background="#00000000"
            android:layout_marginLeft="@dimen/Buttonleftmargin"
            />
    </FrameLayout>
    <View
        android:background="@color/colorback4"
        android:layout_width="match_parent"
        android:layout_height="12dp">
    </View>
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/spread_line_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    </com.github.mikephil.charting.charts.LineChart>
    <View
        android:background="@color/colorback4"
        android:layout_width="match_parent"
        android:layout_height="12dp">
    </View>
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/spread_line_chart2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    </com.github.mikephil.charting.charts.LineChart>
</LinearLayout>
