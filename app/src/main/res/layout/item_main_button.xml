<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebuttonHeight"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/item_main_btlogo"
        android:layout_width="@dimen/titlebuttonimageHeight"
        android:layout_height="@dimen/titlebuttonimageHeight"
        android:layout_marginLeft="@dimen/buttonlistleftmargin"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        />
    <TextView
        android:id="@+id/item_main_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/titlebuttonHeight"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/title1"
        android:textColor="#000000"
        android:layout_marginLeft="@dimen/buttonlistleftmargin"
        />
    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/buttonlistleftmargin"
        android:src="@drawable/jt"
        />

</LinearLayout>
