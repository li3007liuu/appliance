<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorTitle"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleHeight"
        android:background="#00000000"
        >
        <TextView
            android:id="@+id/text_ghtjsc_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/titleHeight"
            android:background="#00000000"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="功耗统计"
            android:textSize="@dimen/title1"
            android:textColor="@color/colorpri1"
            />
        <Button
            android:id="@+id/button_ghtjsc_back"
            android:layout_height="@dimen/titleHeight"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/Buttonleftmargin"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/title3"
            android:textColor="@color/colorpri1"
            android:background="#00000000"
            />
    </RelativeLayout>
    <com.splxtech.appliance.scrollview.GhtjScrollView
        android:id="@+id/ghtjscrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/linear_ghtjsc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="月功耗(kw.h)"
                android:textSize="@dimen/textsize4"
                android:textColor="@color/colorpri1"
                android:gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/text_ghtjsc_dyghz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="@dimen/textsize1"
                android:textColor="@color/colorpri1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                />
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_ghtjsc_chart"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                />
            <TextView
                android:text="每日电器功耗表"
                android:textSize="@dimen/textsize6"
                android:background="@color/colorpri1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/titleHeight"
                />
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bar_ghtjsc_chart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/colorpri1"
                />
            <TextView
                android:id="@+id/text_ghtjsc_dis"
                android:text="电器用电分布图"
                android:textSize="@dimen/textsize6"
                android:gravity="center"
                android:background="@color/colorpri1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/titleHeight"
                />
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pie_ghtjsc_chart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/colorpri1"
                />
        </LinearLayout>
    </com.splxtech.appliance.scrollview.GhtjScrollView>

</LinearLayout>
