<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/dialog_addappliance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_adddialog_sicon"
            android:layout_marginLeft="@dimen/DqjcInlistleft"
            android:layout_marginRight="@dimen/DqjcInlistleft"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/dqjcimageHeight"
            android:layout_height="@dimen/dqjcimageHeight"
            android:scaleType="fitCenter"
            />
        <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:stretchColumns="1"
            >
            <TableRow>
                <TextView
                    android:layout_marginTop="8.8dp"
                    android:layout_marginLeft="@dimen/DqjcInlistleft"
                    android:text="ID     :"
                    android:textColor="@color/colorback2"
                    android:textSize="@dimen/title2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    />
                <TextView
                    android:id="@+id/text_adddq_id"
                    android:layout_marginTop="8.8dp"
                    android:layout_marginRight="@dimen/DqjcInlistleft"
                    android:textColor="@color/colorback2"
                    android:textSize="@dimen/title2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_marginBottom="8.8dp"
                    android:layout_marginLeft="@dimen/DqjcInlistleft"
                    android:gravity="bottom"
                    android:text="名称 :"
                    android:textSize="@dimen/title2"
                    android:textColor="@color/colorback2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    />
                <EditText
                    android:id="@+id/edit_adddq_Name"
                    android:textSize="@dimen/title2"
                    android:textColor="@color/colorback2"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center_horizontal|bottom"
                    android:layout_marginRight="@dimen/DqjcInlistleft"
                    />
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <View
        android:background="@color/colorTitle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/DqjcInlistleft"
        android:layout_marginRight="@dimen/DqjcInlistleft"
        />
    <GridView
        android:id="@+id/grid_adddq_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/TopButtontopMargin"
        android:layout_marginLeft="@dimen/DqjcInlistleft"
        android:layout_marginRight="@dimen/DqjcInlistleft"
        android:horizontalSpacing="2dp"
        android:verticalSpacing="2dp"
        android:numColumns="5"
        android:gravity="center"
        />
</LinearLayout>
