<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/startbkg2"
    android:orientation="vertical"
    android:gravity="bottom|center_horizontal"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/image_start_splx"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:maxHeight="50dp"
            android:maxWidth="150dp"
            android:scaleType="fitCenter"
            android:src="@drawable/splx"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/text_start_ver"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/image_start_splx"
            android:gravity="bottom"
            android:textColor="@color/colorpri1"
            android:textSize="15sp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/text_start_company"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center"
        android:textColor="@color/colorpri1"
        android:textSize="12sp"
        />

</LinearLayout>
